#!/bin/sh
# vim: set filetype=sh tabstop=4 softtabstop=2 shiftwidth=2 expandtab cindent:
# init package
sudo add-apt-repository ppa:git-core/ppa
sudo apt update ; sudo apt -y upgrade
sudo apt -y install vim git tig nkf jless lv zip p7zip-full xsel
# opt package
sudo apt install build-essential libtool automake autoconf pkg-config
sudo apt install cpanminus
sudo apt install npm && npm -g install electron
sudo apt install golang-go
sudo apt install libimage-exiftool-perl
sudo apt install libflickr-upload-perl
sudo apt-get autoremove
# init home
cd ~
[ -d orig ] || (mkdir orig save backup install && sudo cp -p .* /etc/* orig/ && dpkg --get-selections > save/pkg-selections)
[ -d bin  ] || git clone https://github.com/hkuno9000/cygbin.git bin
ln bin/myvimrc     .vimrc
ln bin/mygitignore .gitignore_global
ln bin/myminttyrc  .minttyrc
[ -f .vimrc_local ] || echo colorscheme elflord >.vimrc_local
bash -c bin/initbashrc
bash -c bin/mygitconf
